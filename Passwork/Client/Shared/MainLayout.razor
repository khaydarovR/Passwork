@using Passwork.Client.Components;

@inherits LayoutComponentBase
@inject IDialogService DialogService
@inject AuthenticationManager AuthManager
@inject ISnackbar Snackbar

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" @onclick="@ToggleDrawer" />
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudText>@context.User.FindFirst(System.Security.Claims.ClaimTypes.Email)!.Value</MudText>
            </Authorized>
            <NotAuthorized>
                <MudButton OnClick="@((e) => OpenDialog(maxWidth))" Variant="Variant.Filled" Color="Color.Info">
                    Войти
                </MudButton>
                <MudIconButton Icon="@Icons.Material.Filled.Key" Color="Color.Inherit" />
            </NotAuthorized>
        </AuthorizeView>
        
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">ComPas</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Href="/">Главная</MudNavLink>
            <MudNavLink Href="/counter">Аккаунт</MudNavLink>
        </MudNavMenu>
        <AuthorizeView>
            <Authorized>
                <MudPaper Class="d-flex align-end flex-grow-1 gap-4" Elevation="0">
                    <MudButton Class="m-4" Variant="Variant.Text" @onclick="Logout" Color="Color.Error">Выйти</MudButton>
                </MudPaper>
            </Authorized>
        </AuthorizeView>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        @Body
    </MudMainContent>
</MudLayout>


@code {
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }

    DialogOptions maxWidth = new DialogOptions() { MaxWidth = MaxWidth.Medium, FullWidth = true };

    private void OpenDialog(DialogOptions options)
    {
        DialogService.Show(typeof(Login), "Вход", options);
    }

    async void Logout()
    {
        await AuthManager.Logout();
        Snackbar.Add("Вы вышли с аккаунта", Severity.Warning);
    }
}
